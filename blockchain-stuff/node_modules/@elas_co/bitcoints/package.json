{
  "name": "@elas_co/bitcoints",
  "description": "TypeScript library for Bitcoin SV (BSV).",
  "version": "1.0.2-b4",
  "author": "ts-bitcoin",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/bundle.esm.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ts-bitcoin/ts-bitcoin.git"
  },
  "homepage": "https://github.com/ts-bitcoin/ts-bitcoin#readme",
  "bugs": {
    "url": "https://github.com/ts-bitcoin/ts-bitcoin/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "lint": "eslint -c .eslintrc.json --ext .ts --max-warnings 0 src test",
    "format": "prettier --write '{lib,test}/**/*.+(js|json)'",
    "format:ci": "prettier --list-different '{lib,test}/**/*.+(js|json)'",
    "watch": "tsc -w",
    "build": "npm run clean && npm run build:node",
    "build:node": "tsc",
    "build:browser": "node --openssl-legacy-provider ./node_modules/.bin/webpack --mode production",
    "test:karma": "karma start --single-run",
    "test": "npm run test:mocha",
    "test:mocha": "mocha --verbose --bail --check-leaks",
    "test:mocha:debug": "node --max-old-space-size=8192 ./node_modules/.bin/mocha --require ./test/setup.js --verbose --bail --check-leaks",
    "test:mocha:inspect": "node --inspect=9229 --max-old-space-size=4096 ./node_modules/.bin/mocha --require ./test/setup.js --verbose --bail --check-leaks",
    "publish": "npm run build && npm publish"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "blockchain",
    "bip32",
    "bip39",
    "bip68",
    "multisig",
    "ecies"
  ],
  "dependencies": {
    "aes": "0.1.0",
    "bitcoin-elliptic": "^7.0.1",
    "bn.js": "^5.1.1",
    "bs58": "4.0.1",
    "chai": "^4.2.0",
    "hash.js": "^1.1.7",
    "heapdump": "^0.3.15",
    "is-hex": "1.1.3",
    "karma": "^6.4.3",
    "lodash": "^4.17.21",
    "pbkdf2": "3.1.1",
    "randombytes": "^2.1.0"
  },
  "devDependencies": {
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@types/bn.js": "^5.1.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/randombytes": "^2.0.0",
    "@types/sinon": "^9.0.11",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "should": "^13.2.3",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0"
  },
  "mocha": {
    "spec": "test/**/*.test.ts",
    "require": "ts-node/register",
    "reporter": "progress",
    "recursive": true
  },
  "contributors": [
    "Daniel Cousens <bitcoin@dcousens.com>",
    "Gordon Hall <gordon@bitpay.com>",
    "Jeff Garzik <jgarzik@bitpay.com>",
    "Kyle Drake <kyle@kyledrake.net>",
    "Manuel Araoz <manuelaraoz@gmail.com>",
    "Matias Alejo Garcia <ematiu@gmail.com>",
    "Philipp Petzold <ppetzold@protonmail.com>",
    "Ryan X. Charles <ryanxcharles@gmail.com>",
    "Stefan Thomas <moon@justmoon.net>",
    "Stephen Pair <stephen@bitpay.com>",
    "Wei Lu <luwei.here@gmail.com>",
    "Josh Ellithorpe <quest@mac.com>"
  ],
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  }
}
